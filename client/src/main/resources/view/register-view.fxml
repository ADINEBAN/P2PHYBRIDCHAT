<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" styleClass="login-container" stylesheets="@../styles.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.client.controller.RegisterController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Tạo tài khoản mới" textFill="#0084ff">
        <font> <Font name="Segoe UI Bold" size="24.0" /> </font>
    </Label>

    <TextField fx:id="userField" promptText="Tên đăng nhập" styleClass="input-field" />
    <TextField fx:id="nameField" promptText="Tên hiển thị (VD: Chung Ngo)" styleClass="input-field" />
    <TextField fx:id="emailField" promptText="Email (để khôi phục mật khẩu)" styleClass="input-field" />
    <PasswordField fx:id="passField" promptText="Mật khẩu" styleClass="input-field" />

    <Button defaultButton="true" maxWidth="Infinity" onAction="#handleRegister"
            styleClass="btn-primary" text="Đăng ký" />

    <Button maxWidth="Infinity" onAction="#backToLogin"
            styleClass="btn-link" text="Đã có tài khoản? Đăng nhập" />
</VBox>